/* pages/category/index.wxss */
page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
  height: 100vh;
}
.cates .cates_container .left_menu .menu_item {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_content {
  height: 100%;
  flex: 5;
}
.cates .cates_container .right_content .goods_title {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cates .cates_container .right_content .goods_title .delimiter {
  color: #ccc;
  padding: 0 10px;
}
.cates .cates_container .right_content .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_content .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.cates .cates_container .right_content .goods_list navigator image {
  width: 50%;
}
